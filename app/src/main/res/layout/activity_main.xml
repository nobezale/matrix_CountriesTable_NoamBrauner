<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background"
        >

        <Button
            android:id="@+id/ascending_order"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginLeft="100dp"
            android:text="ascending order" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/descending_order"
            android:text="descending order"
            android:layout_marginLeft="100dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ascending_order_by_area"
            android:layout_marginLeft="70dp"
            android:text="ascending order by area"/>
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descending_order_by_area"
            android:text="descending order by area"
            android:layout_marginLeft="70dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:layout_weight="50"
                android:text="name"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@color/cardview_light_background"
                android:textStyle="bold"
                android:textColor="@android:color/holo_purple"
                android:textSize="24dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:layout_weight="50"
                android:textStyle="bold"
                android:background="@color/cardview_light_background"
                android:textSize="24dp"

                android:gravity="center"
                android:textAlignment="center"
                android:text="nativeName"
                android:textColor="@android:color/holo_purple"
                />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/mylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_purple" />

</LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>